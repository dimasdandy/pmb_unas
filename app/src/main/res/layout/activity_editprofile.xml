<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_input_satu"
    tools:context=".editprofile">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/headerr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="210dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/monsregular"
                    android:textStyle="bold"
                    android:lineSpacingExtra="9dp"
                    android:text="EDIT PROFILE"
                    android:textAlignment="center"
                    android:textColor="#FFFF"
                    android:textSize="25dp"
                    android:layout_marginBottom="10dp"
                    android:shadowColor="#98666666"
                    android:shadowDx="0"
                    android:shadowDy="6"
                    android:shadowRadius="3" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/photo_user"
                    android:layout_width="173dp"
                    android:layout_height="200dp"
                    android:src="@drawable/logo"
                    android:layout_marginTop="10dp">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout_white2"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="210dp"
                android:elevation="5dp" >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:text="Welcome!"
                    android:layout_gravity="center"
                    android:fontFamily="@font/monsregular"
                    android:textSize="24dp"/>


                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/monsmedium"
                        android:text="@string/username_label"
                        android:textColor="@color/grayPrimary"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/bg_input_edit"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/blackPrimary"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/password"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/nama_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/namalengkap"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <EditText
                        android:id="@+id/email"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/nohp_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/nohp"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/jk_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="5dp">

                            <AutoCompleteTextView
                                android:id="@+id/sp_jeniskelamin"
                                android:background="@drawable/bg_input_edit"
                                android:layout_width="250dp"
                                android:layout_height="37dp"
                                android:lines="1"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:textSize="15dp"
                                android:textColor="@color/blackPrimary" />

                            <ImageView
                                android:id="@+id/iv_dropdown"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:lines="1"
                                android:paddingRight="12dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/prodi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="5dp">

                            <AutoCompleteTextView
                                android:id="@+id/sp_programstudi"
                                android:layout_width="250dp"
                                android:layout_height="37dp"
                                android:background="@drawable/bg_input_edit"
                                android:lines="1"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:textColor="@color/blackPrimary"
                                android:textSize="15dp" />

                            <ImageView

                                android:id="@+id/iv_dropdown1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:lines="1"
                                android:paddingRight="12dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/pilih_program_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="5dp">

                            <AutoCompleteTextView
                                android:id="@+id/sp_program"
                                android:background="@drawable/bg_input_edit"
                                android:layout_width="250dp"
                                android:layout_height="37dp"
                                android:lines="1"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:textSize="15dp"
                                android:textColor="@color/blackPrimary" />

                            <ImageView

                                android:id="@+id/iv_dropdown2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:lines="1"
                                android:paddingRight="12dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:text="@string/jalur_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:layout_marginRight="5dp">

                            <AutoCompleteTextView
                                android:id="@+id/sp_jalur"
                                android:background="@drawable/bg_input_edit"
                                android:layout_width="250dp"
                                android:layout_height="37dp"
                                android:lines="1"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:textSize="15dp"
                                android:textColor="@color/blackPrimary" />

                            <ImageView

                                android:id="@+id/iv_dropdown3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:lines="1"
                                android:paddingRight="12dp"
                                android:layout_marginLeft="10dp"
                                android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
                                android:textColor="@color/blackPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="25dp">

                    <TextView
                        android:text="@string/foto_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btn_choose_file"
                        android:background="@drawable/bg_button_blue"
                        android:text="@string/choose_label"
                        android:layout_width="120dp"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#FFF"
                        android:fontFamily="@font/monsregular"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginRight="15dp">
                        <Button
                            android:layout_gravity="center"
                            android:id="@+id/btn_back"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_button_green"
                            android:theme="@style/ButtonLogin"
                            android:fontFamily="@font/monsmedium"
                            android:text="Back"
                            android:textColor="#FFFF"
                            android:textSize="18dp"
                            android:textAllCaps="false"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <Button
                            android:layout_gravity="center"
                            android:id="@+id/btn_simpan"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:background="@drawable/bg_button_berubah2"
                            android:fontFamily="@font/monsmedium"
                            android:text="Simpan"
                            android:textColor="#FFFF"
                            android:textSize="18dp"
                            android:textAllCaps="false"
                            android:layout_marginLeft="24dp"
                            android:layout_marginRight="24dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>