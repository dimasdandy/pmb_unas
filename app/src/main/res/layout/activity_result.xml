<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_layout_white"
    tools:context=".ResultActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="210dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasil Ujian"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/monsmedium"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/beasiswa"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center">
                </de.hdodenhof.circleimageview.CircleImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_layout_white"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="210dp">

                <TextView
                    android:id="@+id/status_ujian"
                    android:background="@drawable/border_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selamat!"
                    android:padding="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/time" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Waktu"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/txt_time"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/time" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Waktu"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/txt_right_answer"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30/30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_format_align_justify_black_24dp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Total Soal"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/btn_filter_total"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_done_white_24dp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Jawaban Benar"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/btn_filter_right_answer"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/clear" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Jawaban Salah"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/btn_filter_wrong_answer"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="7dp"
                        android:src="@drawable/ic_error_outline_black_24dp" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Tidak Terjawab"
                        android:textSize="20dp"
                        android:textColor="#606060" />
                    <TextView
                        android:id="@+id/btn_no_answer"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="30"
                        android:textSize="20dp"
                        android:textColor="#009688"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/monsmedium"
                        android:text="@string/username_label"
                        android:textColor="@color/grayPrimary"
                        android:textSize="15dp" />
                    <TextView
                        android:id="@+id/username"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/password_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/password"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="textPassword"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/nama_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/namalengkap"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/email_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/email"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/nohp_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/nohp"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/jk_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/jeniskelamin"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/prodi_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/programstudi"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/pilih_program_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsregular"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/program"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone">

                    <TextView
                        android:text="@string/jalur_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/monsmedium"
                        android:textSize="15dp"
                        android:textColor="@color/grayPrimary"
                        android:layout_marginBottom="8dp"
                        />

                    <TextView
                        android:id="@+id/jalur"
                        android:background="@drawable/bg_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:textColor="@color/blackPrimary"
                        android:inputType="text"
                        android:textSize="15dp"
                        />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/photo_user"
                    android:layout_width="173dp"
                    android:layout_height="200dp"
                    android:src="@drawable/logo"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">
                </de.hdodenhof.circleimageview.CircleImageView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:visibility="gone">
                </androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="290dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <Button
                        android:layout_gravity="center"
                        android:id="@+id/btn_selesai"
                        android:layout_width="290dp"
                        android:layout_height="45dp"
                        android:background="@drawable/bg_button_green"
                        android:fontFamily="@font/monsmedium"
                        android:text="Selesai Ujian"
                        android:textColor="#FFFF"
                        android:textSize="18dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>