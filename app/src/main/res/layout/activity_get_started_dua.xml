<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".get_started_dua">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_getstarted2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="173dp"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/monsmedium"
            android:lineSpacingExtra="9dp"
            android:text="APLIKASI"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="30dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monsmedium"
            android:lineSpacingExtra="9dp"
            android:text="Penerimaan Mahasiswa Baru"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn_gabung2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button_berubah"
            android:fontFamily="@font/monsmedium"
            android:text="DAFTAR"
            android:textColor="#FFFF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_button_berubah3"
            android:fontFamily="@font/monsmedium"
            android:text="SIGN IN"
            android:textColor="#FFFF"
            android:textSize="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>